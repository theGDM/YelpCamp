<% layout("layouts/boilerplate") %> 
<div id="cluster-map"></div>
    <h1>All Campgrounds</h1>
    <!-- <a href="/campgrounds/new">New Campground</a> -->
        <% for(let camp of campgrounds){ %>
            <div class="card mb-3 shadow mb-3 bg-body rounded border border-dark border-1">
                <div class="row">
                <div class="col-xl-5 col-sm-12 col-xxl-4">
                    <% if(camp.images.length){ %> 
                       <img class="img-fluid" alt="" src="<%= camp.images[0].url %>">
                    <% }else{ %> 
                       <img class="img-fluid" alt="" src="https://res.cloudinary.com/gdm-projects/image/upload/v1632737714/YelpCamp/ddnnvxisqvnoi04ct5h1.jpg">
                    <% } %> 
                </div>
                <div class="col-xl-7 col-sm-12 col-xxl-8"> 
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location %> </small>
                        </p>
                        <a class="btn btn-warning" href="/campgrounds/<%= camp._id %>">View <%= camp.title %> </a>
                    </div>
                </div>
                </div>
            </div>
            <% } %> 
            <script>
                const mapToken='<%- process.env.Mapbox_Token %>';
                const campgrounds={features:<%- JSON.stringify(campgrounds) %>};
            </script>

            <script src="/javascripts/clusterMap.js"></script>
 